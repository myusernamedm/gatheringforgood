@model AboutViewModel
@using Microsoft.AspNetCore.Identity
@using GatheringForGood.Data
@using System.Globalization
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = _loc[Model.PageTabTitle];
}
@section meta_head_tags{
    <meta name='description' content="GatheringForGood - Bringing people together to help save the environment and reduce the impact of climate change." />
    <meta property='og:locale' content="en_US" />
    <meta property="og:type" content="website" />
    <meta property='og:title' content="GatheringForGood - The place where ideas and expertise come together to solve the world's problems." />
    <meta property='og:description' content="GatheringForGood - Bringing people together to help save the environment and reduce the impact of climate change." />
    <meta property='og:url' content="https://gatheringforgood.com/en/About/About" />
    <meta property='og:site_name' content="gatheringforgood" />
    <meta property='og:image' content="http://www.gatheringforgood.com/images/shareimage.jpg" />
    <meta property='og:image:width' content="1200" />
    <meta property='og:image:height' content="600" />
    <meta property='og:image:alt' content="gatheringforgood sharing image" />
    <meta property="og:author" content="gatheringforgood">
    <link rel="preload" as="image" href="@Model.GetEarthHandsReducedImageUrl" imagesrcset="@Model.GetEarthHandsReduced400ImageUrl 2.5x, @Model.GetEarthHandsReduced800ImageUrl 2x, @Model.GetEarthHandsReduced1200ImageUrl 1x, @Model.GetEarthHandsReduced1600ImageUrl 0.5x" sizes="100vw">
}
@section header_image{
    <div class="bg-img-non-home" id="AboutPageBanner">
        <nav class="navbar navbar-expand-lg navbar-light" id="main-navbar-about-page">
            <div class="container">
                <a class="navbar-brand mt-20" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/circle_logo.webp" id="_AboutPageLogoImg" width="40" height="40" style="margin:0px 20px;" alt="Logo Image" onclick="gtag('event','click',{'event_category':'Click','event_label':'AboutPage-GoToHomeLogo'});">
                </a>
                <button class="navbar-toggler" type="button" id="_AboutPageNavBarToggler" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" id="_AboutPageHomeNavLink" asp-area="" asp-controller="Home" asp-action="Index" asp-route-culture="@CultureInfo.CurrentCulture.Name" onclick="gtag('event','click',{'event_category':'Click','event_label':'AboutPage-NavLink-Home'});">@_loc[Model.NavBarHome]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="_AboutPageArticlesNavLink" asp-area="" asp-controller="Articles" asp-action="Articles" asp-route-culture="@CultureInfo.CurrentCulture.Name" onclick="gtag('event','click',{'event_category':'Click','event_label':'AboutPage-NavLink-Articles'});"><p id="AboutPage-Articles-NavLink-Para" onclick="DisableEnableLinks('AboutPage-Articles-NavLink-Para', true, 'About');">@_loc[Model.Articles]</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="_AboutPageAboutNavLink" asp-area="" asp-controller="About" asp-action="About" asp-route-culture="@CultureInfo.CurrentCulture.Name" onclick="gtag('event','click',{'event_category':'Click','event_label':'AboutPage-NavLink-About'});">@_loc[Model.NavBarAbout]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="_AboutPageHelpNavLink" asp-area="" asp-controller="Help" asp-action="Help" asp-route-culture="@CultureInfo.CurrentCulture.Name" onclick="gtag('event','click',{'event_category':'Click','event_label':'AboutPage-NavLink-Help'});">@_loc[Model.NavBarHelpCenter]</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
}
@section header_content{
    <div class="container-title">
        <div class="block-title block-title1">
            <br>
            @if (!SignInManager.IsSignedIn(User))
            {
                <a button type="button" class="btn btn-success button-title" id="AboutPageMakeDiffBtn" asp-area="Identity" asp-page="/Account/Register" asp-route-culture="@CultureInfo.CurrentCulture.Name" onclick="gtag('event','click',{'event_category':'Click','event_label':'AboutPage-Button-MakeADifference'});">@_loc[Model.ButtonText]</a>
            }
            <h1 class="block-subtitle-text" id="AboutPageSubtitle">@_loc[Model.Subtitle]</h1>
            <h2 class="block-title-text-non-home" id="AboutPageTitle">@_loc[Model.Title]</h2>
        </div>
    </div>
}
</div>
<body class="body-bg-img">
    <div class="modal fade" id="aboutPageComingSoonModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content comingsoon-bg-img">
                <div class="modal-header">
                    <h3 class="modal-title" id="ComingSoonModalTitle">Modal Error!1</h3>
                    <button type="button" id="ComingSoonModalHeaderCloseButton" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="col justify-content-center align-items-center">
                    <h4 class="modal-body" id="aboutPageLearnMoreModalPara">Modal Error!2</h4>
                </div>
                <br />
                <div class="form-group thumb-block">
                    <form action="@Url.Action("SaveUserEntry","About")" method="post">
                        <label class="modal-body1 col-form-label" id="aboutPageComingSoonModalFormLabel">Modal Error!3</label>
                        <br />
                        <textarea class="form-control" name="newsfeedUserEntry" id="newsfeedUserEntry" type="text"></textarea>
                        <div class="modal-footer">
                            <button type="submit" id="ComingSoonModalFooterSubmitButton" class="btn btn-success" data-dismiss="aboutPageComingSoonModal" onclick="gtag('event','click',{'event_category':'Click','event_label':'AboutPage-Button-ComingSoonModalSubmit'});">@_loc[Model.Submit]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col justify-content-center align-items-center">
                <a href="@_loc[Model.HomepageShare]" data-size="small"><img src="@Model.IconTwitter" id="AboutpageTwitterShareIconImage" width="30" height="30" style=" margin: 0px 10px 40px 0px;" alt="Twitter Share Icon" onclick="gtag('event','click',{'event_category':'Click','event_label':'About-Button-TwitterShareIcon'});"></a>
            </div>
            <div class="col justify-content-center align-items-center">
                <div data-href="" data-layout="button" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.gatheringforgood.com%2Fen%2FArticles%2FArticles%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore"><img src="@Model.IconFacebook" id="ArticlespageFBShareIconImage" width="30" height="30" style=" margin: 0px 10px 40px 0px;" alt="Facebook Share Icon" onclick="gtag('event','click',{'event_category':'Click','event_label':'About-Button-FacebookShareIcon'});"></a></div>
            </div>
            <div class="col justify-content-center align-items-center">
                <a href="https://www.linkedin.com/shareArticle?mini=true&url=https://www.gatheringforgood.com/en/Articles/Articles&title=Make A Difference&summary=gatheringforgood.com&source=GatheringForGood" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=400,height=500,toolbar=1,resizable=0'); return false;" class="fb-xfbml-parse-ignore"><img src="@Model.IconLinkedin" id="ArticlespageLinkedinShareIconImage" width="30" height="30" style=" margin: 0px 10px 40px 0px;" alt="Linkedin Share Icon" onclick="gtag('event','click',{'event_category':'Click','event_label':'About-Button-LinkedinShareIcon'});"></a>
            </div>
        </div>
    </div>
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col">
                <h2 class="font-style-content-head" id="WhereDoesNameComeFromTitle">@_loc[Model.WhereDoesNameComeFromTitle]</h2>
            </div>
        </div>
        <br />
    </div>
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-4 thumb-block">
                <img src="@Model.NameImageThumbnailUrl" id="WhereDoesNameComeFromImage" width="220" height="280" style=" margin: 0px 0px 40px 0px;" alt="Light Bulb Image">
            </div>
            <div class="col-lg-4 font-style-content thumb-text-block" id="WhereDoesNameComeFromPara">
                @_loc[Model.WhereDoesNameComeFromPara]
            </div>
        </div>
    </div>
    <br />
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col">
                <h2 class="font-style-content-head" id="OurVisionTitle">@_loc[Model.OurVisionTitle]</h2>
            </div>
        </div>
    </div>
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8 font-style-content thumb-text-block" id="OurVisionPara">
                @_loc[Model.OurVisionPara]
            </div>
            <div class="col-lg-4 thumb-block">
                <img src="@Model.VisionImageThumbnailUrl" id="OurVisionImage" width="280" height="170" style="margin:0px 0px;" alt="Smilie of People">
            </div>
        </div>
    </div>
    <br />
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col">
                <h2 class="font-style-content-head" id="OurMissionTitle">@_loc[Model.OurMissionTitle]</h2>
            </div>
        </div>
    </div>
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6 font-style-content thumb-text-block d-block d-sm-block d-md-block d-lg-none d-xl-none" id="OurMissionPara">
                @_loc[Model.OurMissionPara]
            </div>
            <div class="col-lg-4 thumb-block">
                <img src="@Model.MissionImageThumbnailUrl" id="OurMissionImage" width="280" height="260" style="margin:0px 0px;" alt="Smilie of People">
            </div>
            <div class="col-lg-6 font-style-content thumb-text-block d-none d-sm-none d-md-none d-lg-block d-xl-block" id="OurMissionParab">
                @_loc[Model.OurMissionPara]
            </div>
        </div>
    </div>
    <br />
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col">
                <br />
                <h2 class="font-style-content-head" id="OurPromiseTitle">@_loc[Model.OurPromiseTitle]</h2>
            </div>
        </div>
        <br />
    </div>
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-4 font-style-content thumb-text-block" id="OurPromisePara">
                @_loc[Model.OurPromisePara]
            </div>
            <div class="col-lg-4 thumb-block">
                <img src="@Model.PromiseImageThumbnailUrl" id="OurPromiseImage" width="300" height="200" style="margin: 0px 0px 40px 0px;" alt="Germinating Growing Seeds">
            </div>
        </div>
    </div>
    <br />
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col">
                <h2 class="font-style-content-head" id="OurEssenceTitle">@_loc[Model.OurEssenceTitle]</h2>
            </div>
        </div>
    </div>
    <div class="container-body">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-4 font-style-content thumb-text-block d-block d-sm-block d-md-block d-lg-none d-xl-none" id="OurEssencePara">
                @_loc[Model.OurEssencePara]
            </div>
            <div class="col-lg-4 thumb-block">
                <img src="@Model.EssenceImageThumbnailUrl" id="OurEssenceImage" width="350" height="150" style="margin:0px 0px;" alt="Crowd of Happy People Image">
            </div>
            <br />
            <div class="col-lg-4 font-style-content thumb-text-block d-none d-sm-none d-md-none d-lg-block d-xl-block" id="OurEssenceParab">
                @_loc[Model.OurEssencePara]
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
</body>
@section Scripts{
    <script src="~/js/aboutPageComingSoonModal.js"></script>
    <script src="~/js/aboutactive.js"></script>
    <script src="~/js/DisableEnableLinks.js"></script>
}

